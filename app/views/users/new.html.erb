    <div class="container" style="margin-top:30px">
      <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><strong>Sign Up </strong></h3>
              <!-- <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a>
              </div> -->
            </div>

      <div class="panel-body">
        <%= form_for(@user) do |f| %>
       <!-- <form role="form"> -->
      <div style="margin-bottom: 12px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>

      <div style="margin-bottom: 12px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>

      <div style="margin-bottom: 12px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
      </div>

      <button type="submit" class="btn btn-success">Sign up</button>

      <hr style="margin-top:10px;margin-bottom:10px;" >

      <div class="form-group">
        <div style="font-size:85%">
          Already have an account?
          <%= link_to 'Login here', login_path %>
        </div>
      </div>
      </form>
      </div>
      </div>
      </div>
    </div>
    <% end %>
